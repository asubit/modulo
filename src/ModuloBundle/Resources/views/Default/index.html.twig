{% extends 'base.html.twig' %}

{% block title %}Modulo{% endblock %}

{% block pageheader %}Modulo{% endblock %}

{% block body %}
    <div class="row-fluid">
        <div class="col-md-6 col-md-offset-3">
            <form class="form-inline" action="{{ path('find_match') }}">
                <div class="form-group">
                    <label class="sr-only" for="zip_code">Postal code</label>
                    <input name="zip_code" type="text" class="form-control" id="zip_code" placeholder="Postal code">
                </div>
                <div class="form-group">
                    <label class="sr-only" for="product">Product</label>
                    <select name="product_id" class="form-control" id="product" placeholder="Product">
                        {% for product in products %}
                        <option value="{{ product.id }}">{{ product.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-default">Find</button>
            </form>
        </div>
    </div>
{% endblock %}
