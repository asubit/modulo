{% extends 'base-admin.html.twig' %}

{% block title %}Category list{% endblock %}

{% block pageheader %}Category list{% endblock %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                    <td>{{ category.title }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-default">show</a>
                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <p>
        <a href="{{ path('category_new') }}" class="btn btn-success">Create a new entry</a>
    </p>
{% endblock %}
