{% extends 'base-admin.html.twig' %}

{% block title %} {{ category.title }} {% endblock %}

{% block pageheader %}{{ category.title }}{% endblock %}

{% block body %}
<p>
    <div class="btn-group" role="group" aria-label="actions">
        <a href="{{ path('category_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Back to the list</a>
        <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> Edit</a>
    </div>
</p>

<table class="table">
    <tr>
        <th>ID</th>
        <td>{{ category.id }}</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>{{ category.title }}</td>
    </tr>
    <tr>
        <th>Articles</th>
        <td>
            <table class="table table-bordered">
                {% for article in category.articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-default">show</a>
                            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        </td>
    </tr>
</table>
{% endblock %}
