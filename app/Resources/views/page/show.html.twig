{% extends 'base-admin.html.twig' %}

{% block title %} {{ page.name }} {% endblock %}

{% block pageheader %}{{ page.name }}{% endblock %}

{% block body %}
    <p>
    <div class="btn-group" role="group" aria-label="actions">
        <a href="{{ path('page_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Back to the list</a>
        <a href="{{ path('page_edit', { 'id': page.id }) }}" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> Edit</a>
    </div>
    </p>

    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ page.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ page.name }}</td>
        </tr>
        <tr>
            <th>Content</th>
            <td>{{ page.content|raw }}</td>
        </tr>
    </table>
{% endblock %}
