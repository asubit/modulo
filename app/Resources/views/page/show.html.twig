{% extends 'base.html.twig' %}

{% block title %}{{ page.name }}{% endblock %}

{% block pagehead %}{{ page.head }}{% endblock %}

{% block pagecss %}{{ page.css }}{% endblock %}

{% block body %}
    <h1>{{ page.name }}</h1>

    <div class="row-fluid">
        <div class="col-md-12">
            {{ page.content|raw }}
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <ul>
            <li>
                <a href="{{ path('page_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('page_edit', { 'id': page.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
        {% endif %}
{% endblock %}

{% block pagefooter %}{{ page.footer }}{% endblock %}

{% block pagejs %}{{ page.js }}{% endblock %}