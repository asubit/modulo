{% extends 'base-admin.html.twig' %}

{% block title %}Page edition{% endblock %}

{% block body %}
    <h1>{{ page.name }} <small>edition</small></h1>

    <p><a href="{{ path('page_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Back to the list</a></p>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.name) }}
            {{ form_errors(edit_form.name) }}
            {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.content) }}
            {{ form_errors(edit_form.content) }}
            {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control tinymce'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.slug) }}
            {{ form_errors(edit_form.slug) }}
            {{ form_widget(edit_form.slug, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.head) }}
            {{ form_errors(edit_form.head) }}
            {{ form_widget(edit_form.head, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.footer) }}
            {{ form_errors(edit_form.footer) }}
            {{ form_widget(edit_form.footer, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.css) }}
            {{ form_errors(edit_form.css) }}
            {{ form_widget(edit_form.css, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.js) }}
            {{ form_errors(edit_form.js) }}
            {{ form_widget(edit_form.js, { 'attr': {'class': 'form-control'} }) }}
        </div>
        {{ form_rest(edit_form) }}
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
    {{ form_end(edit_form) }}

    <hr />

    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}
