{% extends 'base-admin.html.twig' %}

{% block title %}Menu link edition{% endblock %}

{% block pageheader %}Menu link #{{ menuLink.id }}<small>edition</small>{% endblock %}

{% block body %}
    <p><a href="{{ path('menulink_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Back to the list</a></p>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.menu) }}
            {{ form_errors(edit_form.menu) }}
            {{ form_widget(edit_form.menu, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.type) }}
            {{ form_errors(edit_form.type) }}
            {{ form_widget(edit_form.type, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class=" ml-filter ml-filter-custom-link">
            <div class="form-group">
                {{ form_label(edit_form.target) }}
                {{ form_errors(edit_form.target) }}
                {{ form_widget(edit_form.target, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.text) }}
                {{ form_errors(edit_form.text) }}
                {{ form_widget(edit_form.text, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group ml-filter ml-filter-category">
            {{ form_label(edit_form.category) }}
            {{ form_errors(edit_form.category) }}
            {{ form_widget(edit_form.category, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group ml-filter ml-filter-page">
            {{ form_label(edit_form.page) }}
            {{ form_errors(edit_form.page) }}
            {{ form_widget(edit_form.page, { 'attr': {'class': 'form-control'} }) }}
        </div>
        {{ form_rest(edit_form) }}
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
    {{ form_end(edit_form) }}

    <hr />

    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}

{% block javascripts %}
    <script>
        var menuLinkType = $( '#menu_link_type' ).val();
        console.log( menuLinkType );
        $( document ).ready(function(){
            displayFormSection( menuLinkType );
        });
        $( '#menu_link_type' ).on( 'change', function(){
            displayFormSection( this.value );
        });
        function displayFormSection( section ){
            if( section == '' ) {
                $( '.ml-filter' ).hide();
            } else if( section == 'l' ) {
                $( '.ml-filter' ).hide();
                $( '.ml-filter-custom-link' ).show();
            } else if( section == 'c' ) {
                $( '.ml-filter' ).hide();
                $( '.ml-filter-category' ).show();
            } else if( section == 'p' ) {
                $( '.ml-filter' ).hide();
                $( '.ml-filter-page' ).show();
            }
        }
    </script>
{% endblock %}
