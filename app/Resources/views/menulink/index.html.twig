{% extends 'base.html.twig' %}

{% block body %}
    <h1>MenuLink list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Target</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menuLink in menuLinks %}
            <tr>
                <td><a href="{{ path('menulink_show', { 'id': menuLink.id }) }}">{{ menuLink.id }}</a></td>
                <td>{{ menuLink.target }}</td>
                <td>{{ menuLink.text }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('menulink_show', { 'id': menuLink.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('menulink_edit', { 'id': menuLink.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('menulink_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
