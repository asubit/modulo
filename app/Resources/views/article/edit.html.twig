{% extends 'base-admin.html.twig' %}

{% block title %}Article edition{% endblock %}

{% block pageheader %}{{ article.title }} <small>edition</small>{% endblock %}

{% block body %}
    <p><a href="{{ path('article_index') }}" class="btn btn-default"><span class="glyphicon glyphicon-chevron-left"></span> Back to the list</a></p>

    {{ form_start(edit_form) }}
        <div class="form-group">
            {{ form_label(edit_form.category) }}
            {{ form_errors(edit_form.category) }}
            {{ form_widget(edit_form.category, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.title) }}
            {{ form_errors(edit_form.title) }}
            {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(edit_form.content) }}
            {{ form_errors(edit_form.content) }}
            {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control tinymce'} }) }}
        </div>
        {{ form_rest(edit_form) }}
        <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
    {{ form_end(edit_form) }}

    <hr />

    {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
    {{ form_end(delete_form) }}
{% endblock %}
