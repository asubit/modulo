{% set route = path('article_edit', {'id': article.id}) %}

<div class="modal fade" id="editModalForArticle{{ article.id }}" tabindex="-1" role="dialog" aria-labelledby="modalArticle{{ article.id }}Label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fermer"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalArticle{{ article.id }}Label">{{ article.titre }} <small>Ã‰dition</small></h4>
            </div>
            <div class="modal-body">
                {{ form_start(edit_form, {'attr': {'action': route}}) }}
	            <div class="form-group">
					<label for="{{ edit_form.section.vars.id }}">{{ form_label(edit_form.section) }} *</label>
					{{ form_errors(edit_form.section) }}
					{{ form_widget(edit_form.section, {'attr': {'class': 'form-control'}}) }}
				</div>
	            <div class="form-group">
					<label for="{{ edit_form.titre.vars.id }}">{{ form_label(edit_form.titre) }} *</label>
					{{ form_errors(edit_form.titre) }}
					{{ form_widget(edit_form.titre, {'attr': {'class': 'form-control'}}) }}
				</div>
	            <div class="form-group">
					<label for="{{ edit_form.contenu.vars.id }}">{{ form_label(edit_form.contenu) }}</label>
					{{ form_errors(edit_form.contenu) }}
					{{ form_widget(edit_form.contenu, {'attr': {'class': 'form-control'}}) }}
				</div>
                {{ form_widget(edit_form) }}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                <input class="btn btn-primary" type="submit" value="Enregistrer" />
                {{ form_end(edit_form) }}
                <p>
                	{{ form_start(delete_form) }}
			    	    <input class="btn btn-danger" type="submit" value="Supprimer" class="btn btn-danger pull-left">
			    	{{ form_end(delete_form) }}
			    </p>
            </div>
        </div>
    </div>
</div>