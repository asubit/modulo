{% extends 'base-admin.html.twig' %}

{% block title %}Article list{% endblock %}

{% block pageheader %}Article list{% endblock %}

{% block body %}
    <p>
        <a href="{{ path('article_new') }}" class="btn btn-success">Create a new entry</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td><a href="{{ path('category_show', { 'id': article.category.id }) }}">{{ article.category.title }}</a></td>
                    <td><a href="{{ path('article_show', { 'id': article.title }) }}">{{ article.title }}</a></td>
                    <td>{{ article.content|slice(0,100) }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a href="{{ path('article_show', { 'id': article.id }) }}" class="btn btn-default">show</a>
                            <a href="{{ path('article_edit', { 'id': article.id }) }}" class="btn btn-default">edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
