<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Modulo{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- Bootstrap -->
        <link href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Modulo styles -->
        <link href="{{ asset('bundles/modulo/css/style.css') }}" rel="stylesheet">
        <!-- Tiny MCE -->
        {% block tinymce %}{% endblock %}
        <!-- Extra custom page head section -->
        {% block pagehead %}{% endblock %}
        <!-- Extra custom page CSS section -->
        {% block pagecss %}{% endblock %}
    </head>
    <body>
        {# ADMIN NAVBAR #}
        {% if is_granted('ROLE_ADMIN') %}
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('index') }}">Modulo</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('admin') }}">Dashboard</a></li>
                        <li><a href="{{ path('settings') }}">Settings</a></li>
                        <li><a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-off"></span></a></li>
                        <li><a href="#">Help</a></li>
                    </ul>
                    <form class="navbar-form navbar-right">
                        <input type="text" class="form-control" placeholder="Search...">
                    </form>
                </div>
            </div>
        </nav>
        {% endif %}

        {{ render(controller('ModuloBundle:Default:menu', {'menu': 'top'})) }}

        <div class="container-fluid"{% if is_granted('ROLE_ADMIN') %} style="padding-top: 50px"{% endif %}>
            <div class="row">
                <div class="col-sm-3 col-md-2 sidebar">
                    {{ render(controller('ModuloBundle:Default:menu', {'menu': 'left'})) }}
                </div>
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    <h1 class="page-header">{% block pageheader %}{% endblock %}</h1>

                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        <!-- Extra custom page footer section -->
        {% block pagefooter %}{% endblock %}
        
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="{{ asset('bundles/bootstrap/js/bootstrap.min.js') }}"></script>
        {% block javascripts %}
        {% endblock %}
        <!-- Extra custom page JavaScript section -->
        {% block pagejs %}{% endblock %}
    </body>
</html>
